{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true, // Enable decorators
    "emitDecoratorMetadata": true // Enable metadata for sequelize-typescript
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
